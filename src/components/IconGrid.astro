  { name: 'Mantenimiento', color: '#f59e0b', url: 'https://example.com/item' },
  { name: 'Contrata', color: '#10b981', url: 'https://example.com/customer' },
  { name: 'Oxi', color: '#8b5cf6', url: 'https://example.com/file-manager' },
  { name: 'Supplier', color: '#ef4444', url: 'https://example.com/supplier' },
  { name: 'Website', color: '#10b981', url: 'https://example.com/website' },
  { name: 'Employee', color: '#10b981', url: 'https://example.com/employee' },
  { name: 'Project', color: '#8b5cf6', url: 'https://example.com/project' },
  { name: 'Issue', color: '#1f2937', url: 'https://example.com/issue' },
  { name: 'Lead', color: '#3b82f6', url: 'https://example.com/lead' },
  { name: 'Profit and Loss Stat...', color: '#3b82f6', url: 'https://example.com/profit-loss' },
  { name: 'Accounts', color: '#3b82f6', url: 'https://example.com/accounts' },
  { name: 'Stock', color: '#f59e0b', url: 'https://example.com/stock' },
  { name: 'CRM', color: '#ec4899', url: 'https://example.com/crm' },
  { name: 'Selling', color: '#10b981', url: 'https://example.com/selling' },
  { name: 'Buying', color: '#ef4444', url: 'https://example.com/buying' },
  { name: 'Human Resources', color: '#10b981', url: 'https://example.com/hr' },
  { name: 'Manufacturing', color: '#6b7280', url: 'https://example.com/manufacturing' },
  { name: 'POS', color: '#10b981', url: 'https://example.com/pos' },
  { name: 'Projects', color: '#8b5cf6', url: 'https://example.com/projects' },
