  { name: 'Explore', color: '#6366f1', url: 'https://example.com/explore' },
];
---

<div class="icon-grid">
    {icons.map((icon) => (
    <a href={icon.url} class="icon" target="_blank" rel="noopener noreferrer">
        <div class="icon-bg" style={`background-color: ${icon.color}`}>
        {icon.name.charAt(0)}
        </div>
        <span class="icon-name">{icon.name}</span>
    </a>
    ))}
</div>

<style>
  .icon-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(110px, 1fr));
    gap: 1rem;
    padding: 1rem;
  }
  .icon {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: inherit;
    position: relative;
    transition: transform 0.2s ease-in-out;
    margin-bottom: 1.5rem;
  }
  .icon:hover {
    transform: scale(1.05);
  }
  .icon-bg {
    width: 4.5rem;
    height: 4.5rem;
    border-radius: 0.75rem;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    font-weight: bold;
    margin-bottom: 0.3rem;
  }
  .icon-name {
    font-size: 0.8rem;
    text-align: center;
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

</style>